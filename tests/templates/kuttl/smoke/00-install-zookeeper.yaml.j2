---
apiVersion: zookeeper.stackable.tech/v1alpha1
kind: ZookeeperCluster
metadata:
  name: test-zk
spec:
  config:
{% if test_scenario['values']['use-client-tls'] == 'true' %}
    tls:
      secretClass: zk-client-secret
{% else %}
    tls: null
{% endif %}
{% if test_scenario['values']['use-client-auth-tls'] == 'true' %}
    clientAuthentication:
      authenticationClass: zk-client-auth-tls
{% endif %}
    quorumTlsSecretClass: tls
  servers:
    config:
      resources:
        storage:
          data:
            capacity: '1Gi'
        cpu:
          max: '500m'
          min: '250m'
        memory:
          limit: '0.5Gi'
    roleGroups:
      primary:
        replicas: 2
        config:
          myidOffset: 10
      secondary:
        replicas: 1
        config:
          myidOffset: 20
          resources:
            storage:
              data:
                capacity: '2Gi'
  version: {{ test_scenario['values']['zookeeper'] }}
  stopped: false
{% if test_scenario['values']['use-client-auth-tls'] == 'true' %}
---
apiVersion: authentication.stackable.tech/v1alpha1
kind: AuthenticationClass
metadata:
  name: zk-client-auth-tls
spec:
  provider:
    tls:
      clientCertSecretClass: zk-client-auth-secret
---
apiVersion: secrets.stackable.tech/v1alpha1
kind: SecretClass
metadata:
  name: zk-client-auth-secret
spec:
  backend:
    autoTls:
      ca:
        secret:
          name: secret-provisioner-tls-zk-client-auth-ca
          namespace: default
        autoGenerate: true
{% endif %}
{% if test_scenario['values']['use-client-tls'] == 'true' %}
---
apiVersion: secrets.stackable.tech/v1alpha1
kind: SecretClass
metadata:
  name: zk-client-secret
spec:
  backend:
    autoTls:
      ca:
        secret:
          name: secret-provisioner-tls-zk-client-ca
          namespace: default
        autoGenerate: true
{% endif %}
---
apiVersion: zookeeper.stackable.tech/v1alpha1
kind: ZookeeperZnode
metadata:
  name: test-znode
spec:
  clusterRef:
    name: test-zk
