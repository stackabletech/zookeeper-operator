[Unit]
Description=Stackable Operator for Apache ZooKeeper
Before=
After=network.target
[Service]
User=root
ExecStart=/opt/stackable/zookeeper-operator/stackable-zookeeper-operator
Restart=on-abort
StandardOutput=journal
StandardError=journal
Environment="ZOOKEEPER_OPERATOR_LOG=info"
[Install]
WantedBy=multi-user.target
